---
import BaseLayout from '../../../layouts/BaseLayout.astro'
---

<BaseLayout title="Portugues" max="max-w-[60rem]">
  <div class="wrapper text-sm sm:px-12 sm:text-lg max-w-[65rem] mx-auto">
    <div class="one bg-base-200 p-2">Semana 3</div>
    <div class="two bg-base-300 px-4 py-2">
      <div class="font-bold">Proximamente</div>
      <div>Proximamente</div>
    </div>
    <div class="three bg-base-200 px-4 py-2">
      <div class="font-bold">Temas:</div>
      <div>* Proximamente.</div>
      <div>* Proximanente.</div>
      <div>* Proximamente.</div>
    </div>
    <div class="four bg-base-200 p-2">Proximamente.</div>
    <div class="five bg-base-300 p-2">Proximamente.</div>
    <div class="six bg-base-200 p-2">Proximamente.</div>
    <div class="seven bg-base-300 p-2">Proximamente.</div>
  </div>
</BaseLayout>

<style>
  .wrapper {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 10px;
    grid-auto-rows: minmax(100px, auto);
  }
  .one {
    grid-column: 1 / 2;
    grid-row: 1;
  }
  .two {
    grid-column: 2 / 4;
    grid-row: 1 / 3;
  }
  .three {
    grid-column: 1;
    grid-row: 2 / 5;
  }
  .four {
    grid-column: 3;
    grid-row: 3;
  }
  .five {
    grid-column: 2;
    grid-row: 4;
  }
  .six {
    grid-column: 3;
    grid-row: 4;
  }
  .seven {
    grid-column: 2;
    grid-row: 3;
  }
</style>
