    <img src={"https://mercado.webapp.ar/images/" + image} alt="Shoes" class="w-full brightness-90 hover:brightness-95 rounded-xl" />
  </figure>
  <div class="card-body items-center text-center p-0">
    <!-- <h2 class="card-title mt-0 pt-0">{title}</h2> -->
